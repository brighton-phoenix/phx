{
  "name": "phx",
  "version": "1.0.0",
  "description": "Brighton Phoenix",
  "scripts": {
    "build:css": "postcss --config postcss.config.js frontend/css/site.css --output frontend/static/css/site.css",
    "build:admin-css": "postcss --config postcss.config.js frontend/css/admin.css --output frontend/static/css/admin.css",
    "build:js": "webpack --config webpack.config.js",
    "build:templates": "node scripts/build-templates.js",
    "build": "npm-run-all build:*",
    "lint:css": "stylelint --config stylelint.config.js \"frontend/components/**/*.css\" && stylelint --config stylelint.config.js \"frontend/css/**/*.css\"",
    "lint:js": "eslint --config eslint.config.js frontend/components/ frontend/js/",
    "lint": "npm-run-all lint:*",
    "prepare": "husky install",
    "watch:css": "npm run build:css -- --watch",
    "watch:admin-css": "npm run build:admin-css -- --watch",
    "watch:js": "npm run build:js -- --watch",
    "watch:templates": "npm run build:templates && chokidar 'frontend/**/*.html' 'frontend/**/*.json' -c 'npm run build:templates'",
    "watch": "npm-run-all --parallel watch:*"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.0",
    "chokidar-cli": "^3.0.0",
    "cli-color": "^2.0.1",
    "copy": "^0.3.2",
    "cssnano": "^5.0.14",
    "del": "^6.0.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "glob": "^7.2.0",
    "husky": "^7.0.4",
    "npm-check-updates": "^12.0.5",
    "npm-run-all": "^4.1.5",
    "postcss-calc": "^8.0.0",
    "postcss-cli": "^9.1.0",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^12.0.1",
    "postcss-easy-import": "^3.0.0",
    "prettier": "^2.5.1",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-suitcss": "^17.0.0",
    "stylelint-selector-bem-pattern": "^2.1.1",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "iframe-resizer": "^4.3.2",
    "normalize.css": "^8.0.1",
    "suitcss-base": "^5.0.0"
  }
}
